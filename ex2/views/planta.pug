extends layout
block content
  .w3-card-4
    header.w3-container.w3-teal
        h1 Planta nº#{planta._id}
        h2 
          button.w3-btn.w3-pale-red #[a(href="/") #[b Voltar ao Início]]
    .w3-container
        ul.w3-ul.w3-card-4
                li #[b ID:] #{planta._id}
                li #[b Número de Registo:] #{planta["Número de Registo"]}
                li #[b Código de rua:] #{planta["Código de rua"]}
                li #[b Rua:] #{planta.Rua}
                li #[b Local:] #{planta.Local}
                li #[b Freguesia:] #{planta.Freguesia}
                li #[b Espécie:] #{planta.Espécie}
                li #[b Nome Científico:] #{planta["Nome Científico"]}
                li #[b Origem:] #{planta.Origem}
                li #[b Data de Plantação:] #{planta["Data de Plantação"]}
                li #[b Estado:] #{planta.Estado}
                li #[b Caldeira:] #{planta.Caldeira}
                li #[b Tutor:] #{planta.Tutor}
                li #[b Implantação:] #{planta.Implantação}
                li #[b Gestor:] #{planta.Gestor}
                li #[b Data de actualização:] #{planta["Data de actualização"]}
                li #[b Número de intervenções:] #{planta["Número de intervenções"]}

                
    footer.w3-container.w3-teal
      h5 Generated by Teste :: EngWeb2023 em #{d}