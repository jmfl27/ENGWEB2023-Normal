extends layout
block content
  .w3-card-4
    header.w3-container.w3-teal
      h1 Registos de Plantas: #{plantas.length}
    .w3-container
      table.w3-table-all
        tr
          th ID
          th Freguesia
          th Espécie
          th Estado
          th Número de intervenções
        
        each p in plantas
          tr
            td
              a(href='/' + p._id)= p._id
            td= p.Freguesia
            td
              a(href='/especies/' + p.Espécie)= p.Espécie
            td= p.Estado
            td= p["Número de intervenções"]
              
    footer.w3-container.w3-teal
      h5 Generated by Teste :: EngWeb2023 em #{d}